class Solution {
public:
    bool increasingTriplet(vector<int>& nums) {
        vector<int> Set;
        for(int i = 0; i < nums.size(); i++) {
            if(Set.empty() || nums[i] > Set.back())
                Set.push_back(nums[i]);
            else
                Set[lower_bound(Set.begin(), Set.end(), nums[i]) - Set.begin()] = nums[i];
            if(Set.size() == 3)
                return true;
        }
        return false;
    }
};
