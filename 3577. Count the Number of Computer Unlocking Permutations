class Solution {
    const int MOD = 1e9 + 7;
public:
    int countPermutations(vector<int>& complexity) {
        int minElem = *min_element(complexity.begin() + 1, complexity.end());
        if(minElem <= complexity[0]) return 0;
        int ans = 1, n = complexity.size();
        for(int i = n - 1; i >= 1; i--) {
            ans = (ans * 1LL * i) % MOD;
        }
        return ans;
    }
};

OR

class Solution {
    const int MOD = 1e9 + 7;
public:
    int countPermutations(vector<int>& complexity) {
        int ans = 1, n = complexity.size();
        for(int i = n - 1; i >= 1; i--) {
            if(complexity[i] <= complexity[0]) return 0;
            ans = (ans * 1LL * i) % MOD;
        }
        return ans;
    }
};
