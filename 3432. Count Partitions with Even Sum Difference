class Solution {
public:
    int countPartitions(vector<int>& nums) {
        int total = accumulate(nums.begin(), nums.end(), 0);
        if(total % 2) return 0;
        int sum = nums[0], ans = 0;
        for(int i = 1; i < nums.size(); i++) {
            if((total - 2 * sum) % 2 == 0) {
                ans++;
            }
            sum += nums[i];
        }
        return ans;
    }
};
