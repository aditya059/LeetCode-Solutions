class Solution {
public:
    bool hasIncreasingSubarrays(vector<int>& nums, int k) {
        vector<int> len(nums.size());
        len[0] = 1;
        for(int i = 1; i < nums.size(); i++) {
            len[i] = nums[i] > nums[i - 1]? len[i - 1] + 1: 1;
            if(len[i] >= 2 * k) return true;
            if(i >= k && len[i] == k && len[i - k] >= k) return true;
        }
        return false;
    }
};
