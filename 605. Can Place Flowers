class Solution {
public:
    bool canPlaceFlowers(vector<int>& flowerbed, int n) {
        int m = flowerbed.size();
        int total = 0;
        for(int i = 0; i < flowerbed.size(); i++) {
            if(!flowerbed[i]) {
                if((i == 0 || !flowerbed[i - 1]) && (i == m - 1 || !flowerbed[i + 1])) {
                    total++;
                    flowerbed[i] = 1;
                }
            }
        }
        return total >= n;
    }
};
