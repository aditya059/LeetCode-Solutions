class Solution {
    const int MOD = 1e9 + 7;
    int solve(int n, int x, int i, vector<vector<int>> &memo) {
        if(n == 0) return 1;
        if(n < 0 || pow(i, x) > n) return 0;
        if(memo[n][i] != -1) return memo[n][i];
        int ans = 0;
        ans = (ans + solve(n, x, i + 1, memo)) % MOD;
        ans = (ans + solve(n - pow(i, x), x, i + 1, memo)) % MOD;
        return memo[n][i] = ans;
    }
public:
    int numberOfWays(int n, int x) {
        vector<vector<int>> memo(n + 1, vector<int>(n + 1, -1));
        return solve(n, x, 1, memo);
    }
};
