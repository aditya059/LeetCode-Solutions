class Solution {
public:
    long long largestPerimeter(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        long long currSum = 0, ans = -1;
        for(int i = 0; i < nums.size() - 1; i++) {
            currSum += nums[i];
            if(currSum > nums[i + 1])
                ans = currSum + nums[i + 1];
        }
        return ans;
    }
};
