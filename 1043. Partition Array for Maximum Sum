class Solution {
public:
    int maxSumAfterPartitioning(vector<int>& arr, int k) {
        int n = arr.size();
        vector<int> DP(n + 1);
        for(int i = 0; i < n; i++) {
            int maxElem = INT_MIN;
            for(int j = 1; j <= k; j++) {
                if(i - j >= -1) {
                    maxElem = max(maxElem, arr[i - j + 1]);
                    DP[i + 1] = max(DP[i + 1], DP[i - j + 1] + j * maxElem);
                }
            }
        } 
        return DP[n];
    }
};
