class Solution {
public:
    long long maxProfit(vector<int>& prices, vector<int>& strategy, int k) {
        int n = prices.size();
        long long ans = 0;
        for(int i = 0; i < n; i++) {
            ans += prices[i] * 1LL * strategy[i];
        }
        long long windowSum = 0;
        for(int i = k / 2; i < k; i++) {
            windowSum += prices[i];
        }
        for(int i = k; i < n; i++) {
            windowSum += prices[i] * 1LL * strategy[i];
        }
        ans = max(ans, windowSum);
        for(int i = k; i < n; i++) {
            windowSum += prices[i - k] * strategy[i - k];
            windowSum -= prices[i - k / 2];
            windowSum += prices[i] - prices[i] * strategy[i];
            ans = max(ans, windowSum);
        }
        return ans;
    }
};
