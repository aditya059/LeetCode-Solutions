class Solution {
public:
    int canBeTypedWords(string text, string brokenLetters) {
        int mask = 0, ans = 0;
        for(int i = 0; i < brokenLetters.length(); i++) {
            mask |= 1 << (brokenLetters[i] - 'a');
        }
        stringstream ss(text);
        string word = "";
        while(ss >> word) {
            bool isValid = true;
            for(int i = 0; i < word.length(); i++) {
                if((mask & (1 << (word[i] - 'a')))) {
                    isValid = false;
                    break;
                }
            }
            if(isValid) ans++;
        }
        return ans;
    }
};
