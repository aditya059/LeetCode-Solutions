class Solution {
public:
    int longestSubarray(vector<int>& nums, int limit) {
        int ans = 0;
        multiset<int> Set;
        for(int start = 0, end = 0; end < nums.size(); end++) {
            Set.insert(nums[end]);
            while(*Set.rbegin() - *Set.begin() > limit) {
                Set.erase(Set.find(nums[start++]));
            }
            ans = max(ans, end - start + 1);
        }
        return ans;
    }
};
