class Solution {
public:
    int concatenatedBinary(int n) {
        const int MOD = 1e9 + 7;
        long ans = 0, c = 1;
        for(int i = n; i >= 1; i--) {
            for(int j = i; j > 0; j >>= 1) {
                ans = ((((j & 1) * c) % MOD) + ans) % MOD; 
                c = (c << 1) % MOD;
            }
        }
        return (int)ans;
    }
};
