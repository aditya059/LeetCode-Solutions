class Solution {
public:
    vector<vector<int>> sortMatrix(vector<vector<int>>& grid) {
        int n = grid.size();
        for(int i = 0; i < n; i++) {
            vector<int> topDiag;
            for(int row = 0, col = i; col < n; row++, col++) {
                topDiag.push_back(grid[row][col]);
            }
            sort(topDiag.begin(), topDiag.end());
            int k = 0;
            for(int row = 0, col = i; col < n; row++, col++) {
                grid[row][col] = topDiag[k++];
            }
            vector<int> bottomDiag;
            for(int row = i, col = 0; row < n; row++, col++) {
                bottomDiag.push_back(grid[row][col]);
            }
            sort(bottomDiag.begin(), bottomDiag.end(), greater<int>());
            k = 0;
            for(int row = i, col = 0; row < n; row++, col++) {
                grid[row][col] = bottomDiag[k++];
            }
        }
        return grid;
    }
};
