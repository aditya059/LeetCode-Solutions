class Solution {
public:
    int minimumDeleteSum(string s1, string s2) {
        int m = s1.length(), n = s2.length();
        vector<vector<int>> DP(m + 1, vector<int>(n + 1));
        for(int i = 0; i < m; i++) {
            DP[i + 1][0] = DP[i][0] + s1[i];
        }
        for(int j = 0; j < n; j++) {
            DP[0][j + 1] = DP[0][j] + s2[j];
        }
        for(int i = 0; i < m; i++) {
            for(int j = 0; j < n; j++) {
                if(s1[i] == s2[j])
                    DP[i + 1][j + 1] = DP[i][j];
                else
                    DP[i + 1][j + 1] = min(DP[i][j + 1] + s1[i], DP[i + 1][j] + s2[j]); 
            }
        }
        return DP[m][n];
    }
};
