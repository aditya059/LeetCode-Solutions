class Solution {
public:
    int subarraySum(vector<int>& nums) {
        int sum = 0;
        vector<int> prefix(nums.size() + 1);
        for(int i = 0; i < nums.size(); i++) {
            prefix[i + 1] = prefix[i] + nums[i];
            sum += prefix[i + 1] - prefix[max(0, i - nums[i])];
        }
        return sum;
    }
};
