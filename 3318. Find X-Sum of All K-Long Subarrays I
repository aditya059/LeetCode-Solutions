class Solution {
    int calculateXSum(unordered_map<int, int> freq, int &x) {
        set<pair<int, int>> PQ;
        int sum= 0;
        for(auto iter: freq) {
            PQ.insert({iter.second, iter.first});
            sum += iter.first * iter.second;
            if(PQ.size() > x) {
                auto [count, curr] = *PQ.begin();
                PQ.erase(PQ.begin());
                sum -= curr * count;
            }
        }
        return sum;
    }
public:
    vector<int> findXSum(vector<int>& nums, int k, int x) {
        vector<int> ans;
        unordered_map<int, int> freq;
        for(int i = 0; i < nums.size(); i++) {
            freq[nums[i]]++;
            if(i >= k) {
                freq[nums[i - k]]--;
                if(freq[nums[i - k]] == 0) freq.erase(nums[i - k]);
            }
            if(i >= k - 1) {
                ans.push_back(calculateXSum(freq, x));
            }
        }
        return ans;
    }
};

OR

class Solution {
    int calculateXSum(unordered_map<int, int> freq, int &x) {
        priority_queue<pair<int, int>> PQ;
        int sum= 0;
        for(auto iter: freq) {
            PQ.push({-iter.second, -iter.first});
            sum += iter.first * iter.second;
            if(PQ.size() > x) {
                auto [count, curr] = PQ.top();
                PQ.pop();
                sum -= curr * count;
            }
        }
        return sum;
    }
public:
    vector<int> findXSum(vector<int>& nums, int k, int x) {
        vector<int> ans;
        unordered_map<int, int> freq;
        for(int i = 0; i < nums.size(); i++) {
            freq[nums[i]]++;
            if(i >= k) {
                freq[nums[i - k]]--;
                if(freq[nums[i - k]] == 0) freq.erase(nums[i - k]);
            }
            if(i >= k - 1) {
                ans.push_back(calculateXSum(freq, x));
            }
        }
        return ans;
    }
};
