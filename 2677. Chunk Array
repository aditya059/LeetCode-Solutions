/**
 * @param {Array} arr
 * @param {number} size
 * @return {Array}
 */
var chunk = function(arr, size) {
    let ans = [];
    for(let i = 0, k = 0; i < arr.length; i += size, k++) {
        ans[k] = [];
        for(let j = i; j < Math.min(i + size, arr.length); j++) {
            ans[k].push(arr[j]);
        }
    }
    return ans;
};
