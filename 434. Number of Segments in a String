class Solution {
public:
    int countSegments(string s) {
        int count = 0;
        string wd = "";
        for(int i = 0; i < s.length(); i++) {
            if(s[i] != ' ') {
                wd += s[i];
            }
            else{
                if(wd != "")
                    count++;
                wd = "";
            }
        }
        if(wd != "")
            count++;
        return count;
    }
};
