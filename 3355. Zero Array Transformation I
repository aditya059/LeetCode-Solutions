class Solution {
public:
    bool isZeroArray(vector<int>& nums, vector<vector<int>>& queries) {
        int n = nums.size();
        vector<int> diff(n);
        for(int i = 0; i < queries.size(); i++) {
            diff[queries[i][0]]++;
            if(queries[i][1] != n - 1) diff[queries[i][1] + 1]--;
        }
        int currDiff = 0;
        for(int i = 0; i < n; i++) {
            currDiff += diff[i];
            if(currDiff < nums[i]) return false;
        }
        return true;
    }
};
