// C++
class Solution {
public:
    int equalPairs(vector<vector<int>>& grid) {
        int n = grid.size();
        int ans = 0;
        for(int i = 0; i < n; i++) {
            for(int j = 0; j < n; j++) {
                bool flag = true;
                for(int k = 0; k < n; k++) {
                    if(grid[i][k] != grid[k][j]) {
                        flag = false;
                        break;
                    }
                }
                if(flag) ans++;
            }
        }
        return ans;
    }
};


// Golang
func equalPairs(grid [][]int) int {
    n := len(grid)
    ans := 0
    for i := 0; i < n; i++ {
        for j := 0; j < n; j++ {
            flag := true
            for k := 0; k < n; k++ {
                if grid[i][k] != grid[k][j] {
                    flag = false
                    break
                }
            }
            if flag {ans++}
        }
    }
    return ans
}
