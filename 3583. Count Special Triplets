class Solution {
    const int MOD = 1e9 + 7;
public:
    int specialTriplets(vector<int>& nums) {
        unordered_map<int, int> totalFreq, currentFreq;
        int ans = 0;
        for(int i = 0; i < nums.size(); i++) {
            totalFreq[nums[i]]++;
        }
        for(int i = 0; i < nums.size(); i++) {
            int count = currentFreq[2 * nums[i]];
            currentFreq[nums[i]]++;
            ans = (ans + (count * 1LL * (totalFreq[2 * nums[i]] - currentFreq[2 * nums[i]])) % MOD) % MOD;
        }
        return ans;
    }
};
