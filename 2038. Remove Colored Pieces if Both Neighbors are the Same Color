// C++
class Solution {
public:
    bool winnerOfGame(string colors) {
        int n = colors.size(), lenA = 0, lenB = 0, total = 0;
        for(int i = 0; i < n; i++) {
            if(colors[i] == 'A') {
                lenA++;
                total -= max(0, lenB - 2);
                lenB = 0;
            } else {
                lenB++;
                total += max(0, lenA - 2);
                lenA = 0;
            }
        }
        total += max(0, lenA - 2) - max(0, lenB - 2); 
        return total > 0; 
    }
};


// Golang
func max(a, b int) int {
    if a > b {return a}
    return b
}

func winnerOfGame(colors string) bool {
    var n, lenA, lenB, total int = len(colors), 0, 0, 0
    for i := 0; i < n; i++ {
        if colors[i] == 'A' {
            lenA++
            total -= max(0, lenB - 2)
            lenB = 0
        } else {
            lenB++
            total += max(0, lenA - 2)
            lenA = 0
        }
    }
    total += max(0, lenA - 2) - max(0, lenB - 2)
    return total > 0
}
