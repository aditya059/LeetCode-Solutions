class Solution {
public:
    int maxDistinctElements(vector<int>& nums, int k) {
        sort(nums.begin(), nums.end());
        int reqdElem = nums[0] - k, ans = 0;
        for(int i = 0; i < nums.size(); i++) {
            reqdElem = max(reqdElem, nums[i] - k);
            if(abs(nums[i] - reqdElem) <= k) {
                ans++;
                reqdElem++;
            } 
        }
        return ans;
    }
};
