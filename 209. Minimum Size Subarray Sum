class Solution {
public:
    int minSubArrayLen(int target, vector<int>& arr) {
        int sum = arr[0];
        int start = 0;
        int end = 0;
        int ans = INT_MAX;
        while(end < arr.size()) {
            if(sum >= target) {
                ans = min(ans, end - start + 1);
                sum -= arr[start++];
            }
            else {
                end++;
                if(end < arr.size())
                    sum += arr[end];
            }
        }
        if(ans == INT_MAX)
            return 0;
        return ans;
    }
};
