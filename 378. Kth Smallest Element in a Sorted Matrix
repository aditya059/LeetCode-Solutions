class Solution {
public:
    int kthSmallest(vector<vector<int>>& matrix, int k) {
        int n = matrix.size();
        vector<int> numbers;
        for(int i = 0; i < n; i++) {
            for(int j = 0; j < n; j++) {
                numbers.push_back(matrix[i][j]);
            }
        }
        sort(numbers.begin(), numbers.end());
        return numbers[k - 1];
    }
};
