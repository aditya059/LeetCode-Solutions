// O(log(mn)) = O(log m + log n)
class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int i = 0; 
        int j = matrix.size() * matrix[0].size() - 1;
        while(i <= j) {
            int mid = i + (j - i) / 2;
            int r = mid / matrix[0].size(); 
            int c = mid % matrix[0].size();
            if(matrix[r][c] == target)
                return true;
            else if(matrix[r][c] < target)
                i = mid + 1;
            else
                j = mid - 1;
        }
        return false;
    }
};
