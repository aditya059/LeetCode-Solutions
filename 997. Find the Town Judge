class Solution {
public:
    int findJudge(int n, vector<vector<int>>& trust) {
        vector<pair<int, int>> temp(n + 1);
        for(int i = 0; i < trust.size(); i++) {
            temp[trust[i][0]].first++;
            temp[trust[i][1]].second++;
        }
        int ans = -1;
        for(int i = 1; i <= n; i++) {
            if(temp[i].first == 0 && temp[i].second == n - 1) {
                if(ans != -1) return -1;
                ans = i;
            }
        }
        return ans;
    }
};
