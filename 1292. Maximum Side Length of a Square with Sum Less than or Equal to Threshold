class Solution {
    int calcSum(int i, int j, int squareSize, vector<vector<int>> &prefixSum) {
        return prefixSum[i][j] + prefixSum[i - squareSize][j - squareSize] - prefixSum[i - squareSize][j] - prefixSum[i][j - squareSize];
    }
public:
    int maxSideLength(vector<vector<int>>& mat, int threshold) {
        int m = mat.size(), n = mat[0].size();
        vector<vector<int>> prefixSum(m + 1, vector<int>(n + 1));
        for(int i = 0; i < m; i++) {
            for(int j = 0; j < n; j++) {
                prefixSum[i + 1][j + 1] = prefixSum[i + 1][j] + prefixSum[i][j + 1] - prefixSum[i][j] + mat[i][j];
            }
        }

        auto satisfy = [&](int mid) -> bool {
            for(int i = mid; i <= m; i++) {
                for(int j = mid; j <= n; j++) {
                    if(calcSum(i, j, mid, prefixSum) <= threshold) {
                        return true;
                    }
                }
            }
            return false;
        };
        
        int low = 0, high = min(m, n), ans = 0;
        while(low <= high) {
            int mid = low + (high - low) / 2;
            if(satisfy(mid)) {
                ans = max(ans, mid);
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        return ans;
    }
};
