class Solution {
public:
    int numSubarrayProductLessThanK(vector<int>& nums, int k) {
        if(!k) return 0;
        int start = 0;
        int end = 0;
        int prod = 1;
        int ans = 0;
        while(end < nums.size()) {
            prod *= nums[end];
            while(prod >= k) {
                prod /= nums[start++];
            }
            ans += end - start + 1;
            end++;
        }
        return max(0, ans);
    }
};
