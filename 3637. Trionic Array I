class Solution {
public:
    bool isTrionic(vector<int>& nums) {
        int i = 1, n = nums.size(), p = -1, q = -1;
        while(i < n && nums[i] > nums[i - 1]) {
            i++;
        }
        p = i - 1;
        while(i < n && nums[i] < nums[i - 1]) {
            i++;
        }
        q = i - 1;
        while(i < n && nums[i] > nums[i - 1]) {
            i++;
        }
        return i == n && p > 0 && q > p && q < n - 1;
    }
};
