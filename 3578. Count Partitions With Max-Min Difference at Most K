class Solution {
    const int MOD = 1e9 + 7;
public:
    int countPartitions(vector<int>& nums, int k) {
        int n = nums.size();
        vector<int> DP(n + 1), prefixSum(n + 1);
        DP[0] = prefixSum[0] = 1;
        multiset<int> Set;
        for(int start = 0, end = 0; end < n; end++) {
            Set.insert(nums[end]);
            while(start <= end && *Set.rbegin() - *Set.begin() > k) {
                Set.erase(Set.find(nums[start]));
                start++;
            }
            DP[end + 1] = (prefixSum[end] - (start == 0? 0: prefixSum[start - 1]) + MOD) % MOD;
            prefixSum[end + 1] = (prefixSum[end] + DP[end + 1]) % MOD; 
        }
        return DP[n];
    }
};
