class Solution {
public:
    string removeOuterParentheses(string s) {
        int opened = 0;
        string ans = "";
        for(int i = 0; i < s.length(); i++) {
            if(s[i] == '(') {
                opened++;
                if(opened > 1) {
                    ans += "(";
                }
            } else {
                opened--;
                if(opened > 0) {
                    ans += ")";
                }
            }
        }
        return ans;
    }
};
