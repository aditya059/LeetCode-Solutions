class Solution {
    const int MOD = 1e9 + 7;
public:
    int numOfWays(int n) {
        long c123 = 6, c121 = 6;
        for(unsigned int i = 2; i <= n; i++) {
            long temp = (2 * c123 + 2 * c121) % MOD;
            c121 = (2 * c123 + 3 * c121) % MOD;
            c123 = temp;
        }
        return (c123 + c121) % MOD;
    }
};
