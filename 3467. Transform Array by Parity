class Solution {
public:
    vector<int> transformArray(vector<int>& nums) {
        int n = nums.size(), count = 0;
        for(int i = 0; i < nums.size(); i++) {
            count += nums[i] & 1;
        }
        vector<int> ans(n);
        for(int j = 0; j < count; j++) {
            ans[n - j - 1] = 1;
        }
        return ans;
    }
};

OR

class Solution {
public:
    vector<int> transformArray(vector<int>& nums) {
        int n = nums.size(), count = 0;
        for(int i = 0; i < nums.size(); i++) {
            count += nums[i] & 1;
        }
        vector<int> ans(n);
        for(int j = 0; j < count; j++) {
            ans[n - j - 1] = 1;
        }
        return ans;
    }
};
