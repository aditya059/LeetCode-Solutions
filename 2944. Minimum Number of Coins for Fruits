class Solution {
public:
    int minimumCoins(vector<int>& prices) {
        int n = prices.size();
        vector<int> DP(n + 1);
        for(int i = n - 1; i >= 0; i--) {
            int m = min(n, 2 * i + 2);
            int coinsNeeded = INT_MAX;
            for(int j = i + 1; j <= m; j++) {
                coinsNeeded = min(coinsNeeded, prices[i] + DP[j]);
            }
            DP[i] = coinsNeeded;
        }
        return DP[0];
    }
};
