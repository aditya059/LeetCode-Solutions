class Solution {
public:
    int longestBalanced(string s) {
        int ans = 0, n = s.length();
        for(int i = 0; i < n; i++) {
            int freq[26] = {0};
            for(int j = i; j < n; j++) {
                freq[s[j] - 'a']++;
                int count = 0, maxFreq = 0;
                for(int k = 0; k < 26; k++) {
                    if(freq[k] > 0) {
                        maxFreq = max(maxFreq, freq[k]);
                        count++;
                    }
                    
                }

                if(maxFreq * count == j - i + 1) {
                    ans = max(ans, j - i + 1);
                    
                }
            }
        }
        return ans;
    }
};
