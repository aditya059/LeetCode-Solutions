class Solution {
public:
    int bagOfTokensScore(vector<int>& tokens, int power) {
        sort(tokens.begin(), tokens.end());
        int i = 0;
        int j = tokens.size() - 1;
        int val = 0, ans = 0;
        while(true) {
            while(i <= j && power - tokens[i] >= 0) {
                power -= tokens[i++];
                val++;
                ans = max(ans, val);
            }
            if(val > 0) {
                power += tokens[j--];
                val--;
            }
            else
                break;
        }
        return ans;
    }
};
