class Solution {
public:
    string reverseParentheses(string s) {
        stack<int> Stack;
        for(int i = 0; i < s.length(); i++) {
            if(s[i] == '(') Stack.push(i);
            else if(s[i] == ')') {
                reverse(s.begin() + Stack.top() + 1, s.begin() + i);
                Stack.pop();
            }
        }
        string ans = "";
        for(int i = 0; i < s.length(); i++) {
            if(s[i] != '(' && s[i] != ')')
                ans += s[i];
        }
        return ans;
    }
};
