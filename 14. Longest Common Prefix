class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        int len = INT_MAX;
        for(int i = 0; i < strs.size(); i++) {
            len = min(len, (int)strs[i].size());
        }
        int k = len;
        for(int j = 0; j < len; j++) {
            bool flag = true;
            for(int i = 1; i < strs.size(); i++) {
                if(strs[0][j] != strs[i][j]) {
                    flag = false;
                    k = j;
                    break;
                }
            }
            if(!flag)
                break;
        }
        return strs[0].substr(0, k);
    }
};
