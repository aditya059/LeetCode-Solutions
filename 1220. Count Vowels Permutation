class Solution {
public:
    const int MOD = 1e9 + 7;
    int countVowelPermutation(int n) {
        vector<vector<int>> DP(5, vector<int>(n + 1, 0));
        for(int i = 0; i < 5; i++) {
            DP[i][1] = 1;
        }
        for(int i = 2; i <= n; i++) {
            DP[0][i] = ((DP[1][i - 1] + DP[2][i - 1]) % MOD + DP[4][i - 1]) % MOD;
            DP[1][i] = (DP[0][i - 1] + DP[2][i - 1]) % MOD;
            DP[2][i] = (DP[1][i - 1] + DP[3][i - 1]) % MOD;
            DP[3][i] = DP[2][i - 1];
            DP[4][i] = (DP[2][i - 1] + DP[3][i - 1]) % MOD;
        }
        int ans = 0;
        for(int i = 0; i < 5; i++) {
            ans = (ans + DP[i][n]) % MOD;
        }
        return ans;
    }
};
