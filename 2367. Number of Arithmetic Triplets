class Solution {
public:
    int arithmeticTriplets(vector<int>& nums, int diff) {
        unordered_set<int> Set;
        int ans = 0;
        for(int i = 0; i < nums.size(); i++) {
            ans += (Set.find(nums[i] - diff) != Set.end()) && (Set.find(nums[i] - 2 * diff) != Set.end());
            Set.insert(nums[i]);
        }
        return ans;
    }
};
